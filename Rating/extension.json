{
	"name": "Rating",
	"version": "3.0.0-alpha",
	"license-name": "GPL-3.0",
	"url": "https://help.bluespice.com/index.php/Rating",
	"author": "Patric Wirth",
	"descriptionmsg": "bs-rating-extension-description",
	"type": "bluespice",
	"bsgExtensions": {
		"Rating": {
			"className": "Rating",
			"extPath": "/BlueSpiceRating/Rating",
			"package": "BlueSpice Pro"
		}
	},
	"SpecialPages": {
		"Rating": "SpecialRating"
	},
	"APIModules": {
		"bs-rating-tasks": "BSApiTasksRating",
		"bs-rating-store": "BSApiRatingStore"	},
	"MessagesDirs": {
		"Rating": [
			"i18n"
		]
	},
	"ExtensionMessagesFiles": {
		"RatingMagic": "languages/Rating.i18n.magic.php",
		"RatingAlias": "languages/SpecialRating.alias.php"
	},
	"AutoloadClasses": {
		"Rating": "Rating.class.php",
		"RatingItem": "includes/RatingItem.class.php",
		"RatingItemArticle": "includes/ratingitems/RatingItemArticle.php",
		"RatingItemArticleLike": "includes/ratingitems/RatingItemArticleLike.php",
		"RatingConfig": "includes/RatingConfig.php",
		"RatingConfigArticle": "includes/ratingconfigs/RatingConfigArticle.php",
		"RatingConfigArticleLike": "includes/ratingconfigs/RatingConfigArticleLike.php",
		"RatingRegistry": "includes/RatingRegistry.php",
		"BSApiTasksRating": "includes/api/BSApiTasksRating.php",
		"BSApiRatingStore": "includes/api/BSApiRatingStore.php",
		"SpecialRating": "includes/specials/SpecialRating.class.php"
	},
	"ResourceModules": {
		"ext.bluespice.rating.styles": {
			"styles": "bluespice.rating.css",
			"targets": [ "desktop", "mobile" ]
		},
		"ext.bluespice.rating": {
			"scripts": [
				"bluespice.rating.js"
			],
			"targets": [ "desktop", "mobile" ],
			"dependencies": [
				"oojs-ui",
				"ext.bluespice"
			]
		},
		"ext.bluespice.ratingItem": {
			"scripts": [
				"bluespice.ratingItem.js"
			],
			"targets": [ "desktop", "mobile" ],
			"dependencies": [
				"ext.bluespice.rating"
			]
		},
		"ext.bluespice.ratingItemArticle": {
			"scripts": [
				"bluespice.ratingItemArticle.js"
			],
			"targets": [ "desktop", "mobile" ],
			"dependencies": [
				"ext.bluespice.rating",
				"ext.bluespice.ratingItem"
			],
			"messages": [
				"bs-rating-yourrating"
			]
		},
		"ext.bluespice.ratingItemArticleLike": {
			"scripts": [
				"bluespice.ratingItemArticleLike.js"
			],
			"targets": [ "desktop", "mobile" ],
			"dependencies": [
				"ext.bluespice.rating",
				"ext.bluespice.ratingItem"
			],
			"messages": [
				"bs-rating-articlelike-ratingtext",
				"bs-rating-articlelike-uratingtextservoted"
			]
		},
		"ext.bluespice.ratingItemArticleLike.styles": {
			"styles": [
				"bluespice.ratingarticlelike.css"
			],
			"targets": [ "desktop", "mobile" ]
		},
		"ext.bluespice.specialRating": {
			"scripts": "bluespice.specialRating.js",
			"dependencies": [
				"oojs-ui",
				"ext.bluespice.extjs"
			],
			"targets": [ "desktop", "mobile" ],
			"messages": [
				"bs-rating-specialrating-titleTitle",
				"bs-rating-specialrating-titleRating",
				"bs-rating-specialrating-titleVotes",
				"bs-rating-specialrating-ptbDisplayMsgText",
				"bs-rating-specialrating-ptbEmptyMsgText",
				"bs-rating-specialrating-ptbBeforePageText",
				"bs-rating-specialrating-ptbAfterPageText"
			]
		},
		"ext.bluespice.rating.icons": {
			"styles": "bluespice.rating.icons.less",
			"targets": [ "desktop", "mobile" ],
			"position": "top"
		},
		"ext.rating.starRatingSvg.styles": {
			"targets": [ "desktop", "mobile" ],
			"styles": "star-rating-svg/src/css/star-rating-svg.css"
		},
		"ext.rating.starRatingSvg": {
			"targets": [ "desktop", "mobile" ],
			"scripts": "star-rating-svg/src/jquery.star-rating-svg.js"
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "resources",
		"remoteExtPath": "BlueSpiceRating/Rating/resources"
	},
	"Hooks": {
		"LoadExtensionSchemaUpdates": "Rating::getSchemaUpdates",
		"BeforePageDisplay": "Rating::onBeforePageDisplay",
		"RatingRegister": "Rating::onRatingRegister",
		"UnitTestsList" : "Rating::onUnitTestsList"
	},
	"manifest_version": 1
}